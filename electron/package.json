{
  "name": "remote-time-tracker-desktop",
  "version": "1.0.18",
  "description": "Desktop time tracking application with screenshot monitoring",
  "main": "dist/main/main.js",
  "author": {
    "name": "NautHnil",
    "email": "linhnt0508@gmail.com"
  },
  "homepage": "https://dotbraind.com",
  "license": "MIT",
  "scripts": {
    "dev": "npm run rebuild && npm run generate-env && concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "NODE_ENV=development tsc -p tsconfig.main.json && NODE_ENV=development electron .",
    "dev:renderer": "vite",
    "prod": "npm run generate-env && concurrently \"npm run prod:main\" \"npm run prod:renderer\"",
    "prod:main": "NODE_ENV=production tsc -p tsconfig.main.json && NODE_ENV=production electron .",
    "prod:renderer": "vite",
    "create-icons": "node scripts/create-icons.js",
    "generate-env": "node scripts/generate-env.js",
    "build": "npm run generate-env && npm run create-icons && npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "build:all": "npm run build && concurrently \"electron-builder --mac --publish never\" \"electron-builder --win --publish never\" \"electron-builder --linux --publish never\"",
    "build:mac": "npm run build && electron-builder --mac --publish never",
    "build:win": "npm run build && electron-builder --win --publish never",
    "build:linux": "npm run build && electron-builder --linux --publish never",
    "release": "npm run build && electron-builder --publish always",
    "release:all": "npm run build:all && concurrently \"electron-builder --mac --publish always\" \"electron-builder --win --publish always\" \"electron-builder --linux --publish always\"",
    "release:mac": "npm run build && electron-builder --mac --publish always",
    "release:mac:arm64": "npm run build && electron-builder --mac --arm64 --publish always",
    "release:mac:x64": "npm run build && electron-builder --mac --x64 --publish always",
    "release:mac:universal": "node release-mac-universal.js",
    "release:win": "npm run build && electron-builder --win --publish always",
    "release:linux": "npm run build && electron-builder --linux --publish always",
    "postinstall": "electron-builder install-app-deps",
    "rebuild": "npm run postinstall && npx @electron/rebuild -f -w better-sqlite3 && npx @electron/rebuild -f -w sharp"
  },
  "dependencies": {
    "axios": "^1.6.5",
    "better-sqlite3": "^9.2.2",
    "date-fns": "^3.6.0",
    "dotenv": "^17.2.3",
    "electron-log": "^5.1.4",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.1",
    "fs-extra": "^11.3.3",
    "node-machine-id": "^1.1.12",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "screenshot-desktop": "^1.15.3",
    "sharp": "^0.34.5",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.6.0",
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "@types/screenshot-desktop": "^1.15.0",
    "@types/uuid": "^9.0.7",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10"
  },
  "build": {
    "appId": "com.rtt.desktop",
    "productName": "Remote Time Tracker",
    "artifactName": "${productName}-${version}-${arch}.${ext}",
    "protocols": {
      "name": "Remote Time Tracker",
      "schemes": [
        "timetracker"
      ]
    },
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "node_modules/sharp/**/*",
      "node_modules/@img/**/*",
      "node_modules/better-sqlite3/**/*",
      "node_modules/screenshot-desktop/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "gatekeeperAssess": false,
      "identity": null,
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.png",
      "compression": "maximum"
    },
    "dmg": {
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "compression": "maximum"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Office",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Remote Time Tracker",
      "artifactName": "${productName} Setup ${version}.${ext}",
      "uninstallDisplayName": "Remote Time Tracker",
      "perMachine": false,
      "allowElevation": true,
      "runAfterFinish": true
    },
    "portable": {
      "artifactName": "${productName} Portable ${version}.${ext}"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "NautHnil",
        "repo": "remote-time-tracker",
        "private": true
      }
    ]
  }
}
