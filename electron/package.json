{
  "name": "remote-time-tracker-desktop",
  "version": "1.0.0",
  "description": "Desktop time tracking application with screenshot monitoring",
  "main": "dist/main/main.js",
  "author": {
    "name": "NautHnil",
    "email": "linhnt0508@gmail.com"
  },
  "homepage": "https://dotbraind.com",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "NODE_ENV=development tsc -p tsconfig.main.json && NODE_ENV=development electron .",
    "dev:renderer": "vite",
    "create-icons": "node scripts/create-icons.js",
    "build": "npm run create-icons && npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "build:all": "npm run build:mac && npm run build:win && npm run build:linux",
    "build:mac": "npm run build && electron-builder --mac --publish never",
    "build:win": "npm run build && electron-builder --win --publish never",
    "build:linux": "npm run build && electron-builder --linux --publish never",
    "release": "npm run build && electron-builder --publish always",
    "release:all": "npm run build:all && npm run release:mac && npm run release:win && npm run release:linux",
    "release:mac": "npm run build && electron-builder --mac --publish always",
    "release:win": "npm run build && electron-builder --win --publish always",
    "release:linux": "npm run build && electron-builder --linux --publish always",
    "postinstall": "electron-builder install-app-deps",
    "rebuild": "npx @electron/rebuild -f -w better-sqlite3 && npx @electron/rebuild -f -w sharp"
  },
  "dependencies": {
    "axios": "^1.6.5",
    "better-sqlite3": "^9.2.2",
    "date-fns": "^3.6.0",
    "electron-store": "^8.1.0",
    "node-machine-id": "^1.1.12",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "screenshot-desktop": "^1.15.3",
    "sharp": "^0.33.2",
    "uuid": "^9.0.1",
    "electron-updater": "^6.1.1",
    "electron-log": "^5.1.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^9.0.7",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "@electron/rebuild": "^3.6.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10"
  },
  "build": {
    "appId": "com.rtt.desktop",
    "productName": "Remote Time Tracker",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "asarUnpack": [
      "node_modules/sharp/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.png"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Office",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "NautHnil",
        "repo": "remote-time-tracker"
      }
    ]
  }
}
